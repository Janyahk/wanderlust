<% layout("/layouts/boilerplate") %>

<body>
  <br />
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Edit your list</h3>
      <form action="/listings/<%=list._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title:</label>

          <input
            type="text"
            name="listing[title]"
            value="<%= list.title %>"
            class="form-control"
            required
          />
           <div class="valid-feedback">
            Title looks good!
         </div>
          <div class="invalid-feedback">
            Enter the Title    
        </div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description:</label>
          <input
            type="text"
            name="listing[description]"
            value="<%=  list.description%>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
             Please enter short Description of the place     
        </div>
        </div>

        <div class="mb-3">
          <h5>Original listing image</h5>
         <img src="<%= original %>" alt="" >
         
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">New Image:</label>

          <input
            type="file"
            name="listing[image]"
            
            class="form-control"
          />
         
        </div>
        <div class="mb3">
          <label for="price" class="form-label">Price:</label>

          <input
            type="number"
            name="listing[price]"
            value="<%= list.price %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
Enter the price      </div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-6">
          <label for="location" class="form-label">Location:</label>

          <input
            type="text"
            name="listing[location]"
            value=" <%= list.location %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
       Please enter the valid location       </div>
        </div>
        <div class="mb-3 col-md-6">
          <label for="country" class="form-label">Country:</label>

          <input
            type="text"
            name="listing[country]"
            value="<%= list.country %>"
            class="form-control"
            required
          />
           <div class="invalid-feedback">
 Please enter the valid Country name      </div>
        </div>
        </div>
        <button type="submit" class="btn btn-dark mb-3 add-btn">Edit</button>
      </form>
    </div>
  </div>
</body>

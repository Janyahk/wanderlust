<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-3 mt-3">
                <h3><b>
                        <%= place.title %>
                    </b></h3>
            </div>
            <div class="lcard col-6 offset-3 show-card">
                <img src="<%=place.image%>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">

                        <br>
                       <i><%= place.owner.username %></i> 
                       <br>
                        <%= place.description%>
                            <br>
                            &#8377;<%= place.price.toLocaleString("en-IN") %>
                                <br>
                                <b>
                                    <%= place.location %>,<%= place.country %>
                                </b>
                    </p>
                    <% if(currentuser && currentuser._id.equals(place.owner._id)){%>
                    <div class="row">
                        <div class="col-md-3 ">
                            <form action="/listings/<%= place._id %>?_method=DELETE" method="post">
                                <Button type="submit" class="btn btn-dark mb-3 ">Delete</Button>
                            </form>
                        </div>
                   
                        <div class="col-md-3 ">

                            <form action="/listings/<%= place._id %>/edit" method="get">
                                <Button type="submit" class="btn btn-dark mb-3 add-btn">Edit</Button>
                            </form>
                        </div>
                    </div>
                        <% } %>
                </div>

            </div>
        </div>
        
        <div class="col-8 offset-3 mb-3">
            <hr>
            <% if(currentuser){ %>
            <h4>Leave a Review </h4>
            <form action="/listings/<%= place.id %>/reviews" method="post" novalidate class="needs-validation" >
        <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" name="review[rating]" class="form-range" >
        </div>
        <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments
            </label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Please submit some comments for review </div>
        </div>
      <button class="btn btn-outline-dark" type="submit">submit</button>
        </form>
        
        <hr>
        <% } %>
        <h6>All Reviews</h6>
         <div class="row">

                <% for(let review of place.reviews) { %> 
         <div class="card col-5 m-2">
             <div class="card-body">
                <div class="card-title"> <b><%= review.author.username %></b></div>
                <div class="card-text"><%= review.comment %></div>
                <div class="card-text"><%= review.rating %> Stars</div>
                <% if(currentuser && currentuser._id.equals(place.owner._id)){%>
                <form action="/listings/<%= place.id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="mb-3">
                    <button class="btn btn-dark mb-3 ">Delete</button>

                </form>
                <% } %>
             </div>
         </div>
            <% } %>
            </div>
        </div>
        </div>
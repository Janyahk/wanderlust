    <body>
        <div class="row">
            <div class="col-8 offset-3 mt-3">
                <h3><b>
                        <%= place.title %>
                    </b></h3>
            </div>
            <div class="lcard col-6 offset-3 show-card">
                <img src="<%=place.image.url%>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">

                        <br>
                       <i><%= place.owner.username %></i> 
                       <br>
                        <%= place.description%>
                            <br>
                            &#8377;<%= place.price.toLocaleString("en-IN") %>
                                <br>
                                <b>
                                    <%= place.location %>,<%= place.country %>
                                </b>
                    </p>
                    <% if(currentuser && currentuser._id.equals(place.owner._id)){%>
                    <div class="row">
                        <div class="col-md-3 ">
                            <form action="/listings/<%= place._id %>?_method=DELETE" method="post">
                                <Button type="submit" class="btn btn-dark mb-3 ">Delete</Button>
                            </form>
                        </div>
                   
                        <div class="col-md-3 ">

                            <form action="/listings/<%= place._id %>/edit" method="get">
                                <Button type="submit" class="btn btn-dark mb-3 add-btn">Edit</Button>
                            </form>
                        </div>
                    </div>
                        <% } %>
                </div>

            </div>
        </div>
        
        <div class="col-8 offset-3 mb-3">
            
            <% if(currentuser){ %>
                <hr>
            <h4>Leave a Review </h4>
            <form action="/listings/<%= place.id %>/reviews" method="post" novalidate class="needs-validation" >
        <!-- <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" name="review[rating]" class="form-range" >
        </div> -->
        <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
  <!-- <input type="range" min="1" max="5" name="review[rating]" class="form-range" > -->
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
</div>
        <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments
            </label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Please submit some comments for review </div>
        </div>
      <button class="btn btn-outline-dark" type="submit">submit</button>
        </form>
        
        <hr>
        <% } %>
         <% if(place.reviews.length>0) {%>
         <div class="row">
             <h6>All Reviews</h6>
                <% for(let review of place.reviews) { %> 
         <div class="card col-5 m-2">
             <div class="card-body">
                <div class="card-title"> <b><%= review.author.username %></b></div>
                 <p class="starability-result card-text" data-rating="<%= review.rating %>">Rated: 3 stars</p>

                <div class="card-text"><%= review.comment %></div>
                <!-- <div class="card-text"><%= review.rating %> Stars</div> -->
                <% if(currentuser && currentuser._id.equals(place.owner._id)){%>
                <form action="/listings/<%= place.id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="mb-3">
                    <button class="btn btn-dark mb-3 ">Delete</button>

                </form>
                <% } %>
             </div>
         </div>
            <% } %>
            </div>
         <% } %>
        </div>
           <div class="col-8 offset-3 mb-3">
                <h3>Where you'll be</h3>
                <div id="map"></div>
                
            </div>
        </div>
       <script src="/js/map.js"></script>
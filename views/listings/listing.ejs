<% layout("/layouts/boilerplate") %>

<body>
 
  <h2 class="mt-3 mb-3">All Listings</h2>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% for(let data of datas) { %>
    <a href="/listings/<%= data._id %>" class="listing-links">
      <div class="card col " style="border: none;">
        <img
          src="<%=data.image%>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay">
   
  </div>
        <div class="card-body">
          <p class="card-text">
            <b><%= data.title %></b>
            <br />
            <!-- <%= data.description%>
            <br /> -->
            <b> &#8377;<%= data.price.toLocaleString("en-IN") %>/night</b>

            <br />
            <%= data.location %>, <%= data.country %>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
